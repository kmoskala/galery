                                <img src="{{Image(gallery.img).src}}" alt="{{Image(gallery.img).src}}">
                                <div class="layer">
                                    <div class="hidden_part">
                                        <div class="description">{{gallery.description}}</div>
                                        <div class="date">{{gallery.date}}</div>
                                    </div>
                                    <div class="visibility_part">
                                        <button class="see_more">Zobacz wiÄ™cej</button>
                                    </div>
                                </div>
                            </div>
                        </figure>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
